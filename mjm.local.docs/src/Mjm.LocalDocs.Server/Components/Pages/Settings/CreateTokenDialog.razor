@using System.ComponentModel.DataAnnotations
@using static Mjm.LocalDocs.Server.Components.Pages.Settings.ApiTokens

<MudDialog>
    <DialogContent>
        <EditForm Model="@_model" OnValidSubmit="Submit">
            <DataAnnotationsValidator />
            
            <MudTextField @bind-Value="_model.Name"
                          Label="Name"
                          Placeholder="e.g. Claude Code, Production, Test..."
                          Variant="Variant.Outlined"
                          Required="true"
                          For="@(() => _model.Name)"
                          Class="mb-4"
                          HelperText="A descriptive name for this token" />

            <MudCheckBox @bind-Value="_hasExpiration" 
                         Label="Set expiration date" 
                         Color="Color.Primary"
                         Class="mb-4" />

            @if (_hasExpiration)
            {
                <MudDatePicker @bind-Date="_expirationDate"
                               Label="Expiration date"
                               Variant="Variant.Outlined"
                               MinDate="@DateTime.Today.AddDays(1)"
                               Class="mb-4"
                               HelperText="The token will not be valid after this date" />
            }
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Primary" 
                   Variant="Variant.Filled" 
                   OnClick="Submit"
                   Disabled="@string.IsNullOrWhiteSpace(_model.Name)">
            Create Token
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance? MudDialog { get; set; }

    private readonly TokenFormModel _model = new();
    private bool _hasExpiration;
    private DateTime? _expirationDate;

    private void Submit()
    {
        if (string.IsNullOrWhiteSpace(_model.Name))
            return;

        DateTimeOffset? expiresAt = null;
        if (_hasExpiration && _expirationDate.HasValue)
        {
            // Set expiration to end of day in UTC
            expiresAt = new DateTimeOffset(_expirationDate.Value.Date.AddDays(1).AddSeconds(-1), TimeSpan.Zero);
        }

        var result = new CreateTokenResult(_model.Name.Trim(), expiresAt);
        MudDialog?.Close(DialogResult.Ok(result));
    }

    private void Cancel() => MudDialog?.Cancel();

    private sealed class TokenFormModel
    {
        [Required(ErrorMessage = "Name is required")]
        [StringLength(200, ErrorMessage = "Name cannot exceed 200 characters")]
        public string Name { get; set; } = string.Empty;
    }
}
