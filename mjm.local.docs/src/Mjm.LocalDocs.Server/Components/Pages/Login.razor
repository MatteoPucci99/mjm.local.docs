@page "/login"
@attribute [AllowAnonymous]
@layout LoginLayout
@inject NavigationManager Navigation

<PageTitle>Login - Local Docs</PageTitle>

<div class="login-container">
    @* Left Panel - Decorative *@
    <div class="login-left-panel">
        <div class="login-left-content">
            <MudIcon Icon="@Icons.Material.Filled.Description" 
                     Style="font-size: 4rem; color: white; margin-bottom: 1.5rem;" />
            <MudText Typo="Typo.h3" Style="color: white; font-weight: 600; margin-bottom: 1rem;">
                Welcome to Local Docs
            </MudText>
            <MudText Typo="Typo.body1" Style="color: rgba(255,255,255,0.85); max-width: 400px; line-height: 1.6;">
                Your platform for document management and semantic search. 
                Organize, index, and find your documents with the power of artificial intelligence.
            </MudText>
        </div>
        
        @* Decorative shapes *@
        <div class="decorative-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
        </div>
    </div>

    @* Right Panel - Login Form *@
    <div class="login-right-panel">
        <div class="login-form-container">
            <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-6" Style="font-weight: 500; letter-spacing: 1px;">
                USER LOGIN
            </MudText>

            @if (_showError)
            {
                <MudAlert Severity="Severity.Error" Class="mb-4" ShowCloseIcon="true" CloseIconClicked="@(() => _showError = false)">
                    Invalid credentials. Please try again.
                </MudAlert>
            }

            <form action="/api/login" method="post">
                <MudTextField @bind-Value="_username"
                              Placeholder="Username"
                              Variant="Variant.Outlined"
                              InputType="InputType.Text"
                              Required="true"
                              RequiredError="Username is required"
                              Class="mb-4"
                              name="username"
                              Immediate="true"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.Person" />

                <MudTextField @bind-Value="_password"
                              Placeholder="Password"
                              Variant="Variant.Outlined"
                              InputType="@(_showPassword ? InputType.Text : InputType.Password)"
                              Required="true"
                              RequiredError="Password is required"
                              Class="mb-4"
                              name="password"
                              Immediate="true"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.Lock"
                              AdornmentAriaLabel="Password" />

                <div class="d-flex justify-space-between align-center mb-4">
                    <MudCheckBox @bind-Value="_rememberMe" 
                                 Label="Remember me" 
                                 Color="Color.Primary"
                                 Size="Size.Small" />
                    <MudButton Variant="Variant.Text" 
                               Size="Size.Small" 
                               Color="Color.Primary"
                               OnClick="@(() => _showPassword = !_showPassword)">
                        @(_showPassword ? "Hide password" : "Show password")
                    </MudButton>
                </div>
                <input type="hidden" name="rememberMe" value="@(_rememberMe ? "true" : "false")" />

                <MudButton ButtonType="ButtonType.Submit"
                           Variant="Variant.Filled"
                           Color="Color.Primary"
                           FullWidth="true"
                           Size="Size.Large"
                           Class="login-button">
                    LOGIN
                </MudButton>
            </form>
        </div>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        min-height: 100vh;
        width: 100%;
    }

    .login-left-panel {
        flex: 1;
        background: linear-gradient(135deg, #1976D2 0%, #7B1FA2 50%, #E91E63 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        padding: 2rem;
    }

    .login-left-content {
        position: relative;
        z-index: 2;
        text-align: center;
        padding: 2rem;
    }

    .login-right-panel {
        flex: 1;
        background: #ffffff;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .login-form-container {
        width: 100%;
        max-width: 360px;
    }

    .login-button {
        margin-top: 1rem;
        padding: 0.75rem !important;
        font-weight: 600 !important;
        letter-spacing: 1px !important;
    }

    /* Decorative shapes */
    .decorative-shapes {
        position: absolute;
        inset: 0;
        overflow: hidden;
        pointer-events: none;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        opacity: 0.15;
    }

    .shape-1 {
        width: 300px;
        height: 300px;
        background: linear-gradient(45deg, #FF9800, #FF5722);
        bottom: -100px;
        left: -50px;
        transform: rotate(-15deg);
        border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    }

    .shape-2 {
        width: 200px;
        height: 200px;
        background: linear-gradient(45deg, #4CAF50, #8BC34A);
        top: 10%;
        right: -50px;
        border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    }

    .shape-3 {
        width: 150px;
        height: 150px;
        background: linear-gradient(45deg, #00BCD4, #03A9F4);
        bottom: 20%;
        right: 10%;
        border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
    }

    .shape-4 {
        width: 250px;
        height: 250px;
        background: linear-gradient(45deg, #FFC107, #FF9800);
        top: -50px;
        left: 20%;
        border-radius: 50% 50% 30% 70% / 50% 70% 30% 50%;
    }

    /* Diagonal lines decoration */
    .login-left-panel::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 40%;
        background: 
            repeating-linear-gradient(
                -45deg,
                transparent,
                transparent 10px,
                rgba(255,255,255,0.03) 10px,
                rgba(255,255,255,0.03) 20px
            );
        pointer-events: none;
    }

    /* Responsive */
    @@media (max-width: 960px) {
        .login-container {
            flex-direction: column;
        }

        .login-left-panel {
            min-height: 35vh;
            flex: none;
        }

        .login-left-content h3 {
            font-size: 1.75rem !important;
        }

        .login-right-panel {
            flex: 1;
            min-height: 65vh;
        }
    }

    @@media (max-width: 600px) {
        .login-left-panel {
            min-height: 30vh;
            padding: 1.5rem;
        }

        .login-left-content {
            padding: 1rem;
        }

        .login-left-content p {
            display: none;
        }

        .shape {
            opacity: 0.1;
        }
    }
</style>

@code {
    private string _username = string.Empty;
    private string _password = string.Empty;
    private bool _rememberMe;
    private bool _showPassword;
    private bool _showError;

    [SupplyParameterFromQuery(Name = "error")]
    public string? Error { get; set; }

    protected override void OnInitialized()
    {
        _showError = !string.IsNullOrEmpty(Error);
    }
}
