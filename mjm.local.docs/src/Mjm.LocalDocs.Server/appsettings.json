{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ModelContextProtocol": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "LocalDocs": "Data Source=localdocs.db"
  },
  "LocalDocs": {
    "Server": {
      "UseHttps": false
    },
    "Authentication": {
      "Username": "admin",
      "Password": "admin"
    },
    "Mcp": {
      "RequireAuthentication": true
    },
    "Embeddings": {
      "Provider": "Fake",
      "Dimension": 1536,
      "OpenAI": {
        "Model": "text-embedding-3-small"
      }
    },
    "Storage": {
      "Provider": "Sqlite"
    },
    "FileStorage": {
      "Provider": "Database",
      "FileSystem": {
        "BasePath": "DocumentFiles",
        "CreateDirectoryIfNotExists": true
      },
      "AzureBlob": {
        "ContainerName": "documents",
        "CreateContainerIfNotExists": true
      }
    },
    "Chunking": {
      "MaxChunkSize": 3000,
      "OverlapSize": 300
    }
  }
}
